<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shadow_view"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    Top bar-->
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            app:cardCornerRadius="50dp"
            android:layout_height="50dp" >

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/dp_template"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/poster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe" />

            <TextView
                android:id="@+id/poster_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="San Jose, CA" />

        </LinearLayout>

    </LinearLayout>
<!--    top bar end-->

<!--    middle bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/bg_template" />
    </LinearLayout>
<!--    middle bar end-->

<!--    bottom bar-->
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="start|center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/like_button"
                app:tint="@color/recycler_button_color"
                android:src="@drawable/ic_icon_heart" />

            <TextView
                android:visibility="gone"
                android:id="@+id/num_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/comment_button"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/recycler_button_color"
                android:src="@drawable/ic_baseline_message_24" />

            <ImageView
                android:id="@+id/share_button"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/recycler_button_color"
                android:src="@drawable/ic_icon_share" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bookmark_button"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/recycler_button_color"
                android:src="@drawable/ic_baseline_bookmark_24" />

        </LinearLayout>

    </LinearLayout>
<!--    bottom bar end-->

</LinearLayout>